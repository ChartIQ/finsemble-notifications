			"window": {
				"url": "$applicationRoot/components/finsemble-notifications/components/notification-center/notification-center.html",
				"frame": false,
				"resizable": true,
				"autoShow": true,
				"top": "center",
				"left": "center",
				"width": 800,
				"height": 800,
				"monitor": "primary"
			},
			"component": {
				"preload": false,
				"spawnOnStartup": true,
				"singleton": true
